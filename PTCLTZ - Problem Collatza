#include <iostream>
using namespace std;
 
int main() {
	int tests;
	cin >> tests;
	while (tests--)
	{
		int result;
		int counter=0;
		cin >> result;
		while(result!=1)
		{
			if (result%2==0)
			{
				result/=2;
			}
			else 
			{
				result=(3*result)+1;
			}
			counter++;
		}
		cout <<counter<<endl;
	}
	return 0;
}
